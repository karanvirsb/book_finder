// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Books {
  asin               String    @id
  ISBN10             String
  author_id          Int
  author             Author    @relation(fields: [author_id], references: [id])
  currency           String
  description        String
  final_price        Decimal
  format             Json
  image_url          String
  images_count       Int
  item_weight        String
  product_dimensions String
  rating             String
  reviews_count      Int
  publisher_id       Int
  publisher          Publisher @relation(fields: [publisher_id], references: [id])
  title              String
  url                String
  categories         String[]
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String
  email String
  Books Books[]
}

model Publisher {
  id    Int     @id @default(autoincrement())
  name  String
  email String
  phone String
  Books Books[]
}
